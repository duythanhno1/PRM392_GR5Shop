<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anh"
    tools:context="se1606_prm392_group5.example.se1606_prm392_group05.View.LoginActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Sign in"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/retro_sneakers_and_shoes_store_logo_2"
            android:layout_width="150dp"
            android:layout_height="129dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="retro_sneakers_and_shoes_store_logo_2"
            android:src="@drawable/retro_sneakers_and_shoes_store_logo_2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="141dp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/conner"
            android:drawableLeft="@drawable/vector_ek7"
            android:drawablePadding="20dp"
            android:ems="15"
            android:hint="UserName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/Black"
            android:textSize="12dp"
            tools:ignore="Autofill" />


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/conner"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="20dp"
            android:ems="15"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/Black"
            android:textSize="12dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/conner"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="20dp"
            android:ems="15"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/Black"
            android:textSize="12dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/conner"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="20dp"
            android:ems="15"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/Black"
            android:textSize="12dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/etPhoneNum"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/conner"
            android:drawableLeft="@drawable/icon_phone"
            android:drawablePadding="20dp"
            android:ems="15"
            android:hint="Phone Number"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/Black"
            android:textSize="12dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/conner"
            android:drawableLeft="@drawable/icon_address"
            android:drawablePadding="20dp"
            android:ems="15"
            android:hint="Address"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/Black"
            android:textSize="12dp"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:background="@drawable/conner_grey"
            android:text="Register"
            android:textColor="@color/Black" />

    </LinearLayout>


</RelativeLayout>